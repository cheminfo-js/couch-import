{
  "name": "rest-on-couch",
  "version": "8.0.0",
  "description": "Interface to CouchDB that allows the control of permissions on the documents",
  "main": "src/index.js",
  "files": [
    "bin",
    "public",
    "src",
    "views"
  ],
  "bin": {
    "rest-on-couch-import": "./bin/rest-on-couch-import.js"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/unit/**/*.js"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setup/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "scripts": {
    "build": "webpack --mode production",
    "debug": "cross-env REST_ON_COUCH_HOME_DIR=test/homedir DEBUG=couch:* node --inspect bin/rest-on-couch-server.js",
    "eslint": "eslint src bin test --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prettier": "prettier-eslint bin/*.js src/**/*.js test/**/*.js --write",
    "start:dev": "webpack-dev-server --mode development --content-base ./public --progress",
    "start:prod": "NODE_ENV=production npm run build && node bin/rest-on-couch-server.js",
    "start:devserver": "cross-env REST_ON_COUCH_HOME_DIR=test/homedir DEBUG=couch:* nodemon --ignore ./src/client bin/rest-on-couch-server.js",
    "test": "npm run test-coverage && npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/rest-on-couch.git"
  },
  "keywords": [
    "couch",
    "couchdb"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/rest-on-couch/issues"
  },
  "homepage": "https://github.com/cheminfo/rest-on-couch#readme",
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "commander": "^4.1.0",
    "debug": "^4.1.1",
    "delay": "^4.3.0",
    "extend": "^3.0.2",
    "fold-to-ascii": "^5.0.0",
    "fs-extra": "^8.1.0",
    "got": "^10.2.1",
    "has-own": "^1.0.1",
    "immer": "^5.1.0",
    "kcors": "^2.2.2",
    "klaw": "^3.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^3.0.0",
    "koa-hbs": "^1.0.0",
    "koa-passport": "^4.1.3",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.12.3",
    "koa-static": "^5.0.0",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "object-hash": "^2.0.1",
    "passport-facebook": "^3.0.0",
    "passport-github": "^1.1.0",
    "passport-google": "^0.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-ldapauth": "^2.1.3",
    "passport-local": "^1.0.0",
    "randomatic": "^3.1.1",
    "raw-body": "^2.4.1",
    "zenodo": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-transform-async-to-generator": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.1",
    "eslint": "^6.8.0",
    "eslint-config-cheminfo": "^2.0.4",
    "eslint-config-cheminfo-react": "^3.1.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "jest": "^24.9.0",
    "jquery": "^3.4.1",
    "make-promises-safe": "^5.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-select2-wrapper": "^1.0.4-beta6",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-persist": "^6.0.0",
    "redux-promise-middleware": "^6.1.2",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.0",
    "style-loader": "^1.1.2",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^2.3.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "whatwg-fetch": "^3.0.0"
  }
}
