{
  "name": "rest-on-couch",
  "version": "8.2.0",
  "description": "Interface to CouchDB that allows the control of permissions on the documents",
  "main": "src/index.js",
  "files": [
    "bin",
    "public",
    "src",
    "views"
  ],
  "bin": {
    "rest-on-couch-import": "./bin/rest-on-couch-import.js"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/unit/**/*.js"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setup/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "scripts": {
    "build": "webpack --mode production",
    "debug": "cross-env REST_ON_COUCH_HOME_DIR=test/homedir DEBUG=couch:* node --inspect bin/rest-on-couch-server.js",
    "eslint": "eslint src bin test --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prettier": "prettier-eslint bin/*.js src/**/*.js test/**/*.js --write",
    "start:dev": "webpack-dev-server --mode development --content-base ./public --progress",
    "start:prod": "NODE_ENV=production npm run build && node bin/rest-on-couch-server.js",
    "start:devserver": "cross-env REST_ON_COUCH_HOME_DIR=test/homedir DEBUG=couch:* nodemon --ignore ./src/client bin/rest-on-couch-server.js",
    "test": "npm run test-coverage && npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/rest-on-couch.git"
  },
  "keywords": [
    "couch",
    "couchdb"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/rest-on-couch/issues"
  },
  "homepage": "https://github.com/cheminfo/rest-on-couch#readme",
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "@koa/router": "^9.3.1",
    "commander": "^6.0.0",
    "debug": "^4.1.1",
    "delay": "^4.4.0",
    "extend": "^3.0.2",
    "fold-to-ascii": "^5.0.0",
    "fs-extra": "^9.0.1",
    "got": "^11.5.1",
    "has-own": "^1.0.1",
    "immer": "^7.0.7",
    "kcors": "^2.2.2",
    "klaw": "^3.0.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.0.1",
    "koa-hbs": "^1.0.0",
    "koa-passport": "^4.1.3",
    "koa-response-time": "^2.1.0",
    "koa-session": "^6.0.0",
    "koa-static": "^5.0.0",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.19",
    "minimist": "^1.2.5",
    "object-hash": "^2.0.3",
    "passport-facebook": "^3.0.0",
    "passport-github": "^1.1.0",
    "passport-google": "^0.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-ldapauth": "^2.1.4",
    "passport-local": "^1.0.0",
    "randomatic": "^3.1.1",
    "raw-body": "^2.4.1",
    "zenodo": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-async-to-generator": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.1",
    "eslint": "^7.6.0",
    "eslint-config-cheminfo": "^5.0.0",
    "eslint-config-cheminfo-react": "^6.0.0",
    "jest": "^26.2.2",
    "jquery": "^3.5.1",
    "make-promises-safe": "^5.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-select2-wrapper": "^1.0.4-beta6",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-persist": "^6.0.0",
    "redux-promise-middleware": "^6.1.2",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "^4.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "whatwg-fetch": "^3.3.1"
  }
}
